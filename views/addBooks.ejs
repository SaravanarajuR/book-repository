            <body class="body">
                <div class="body">
                    <center>
                    <h3 style="padding: 1%;">Enter material details</h3>
                </center>
                    <div class="container">
                        <form action="/admin/addbooks" method="post" enctype="multipart/form-data">
                        <main>
                            <div class="input mb-3">
                            <label for="name">Name</label>
                            <input class="form-control" type="text" name="name" placeholder="name of the material" id="name">
                        </div>
                        <div class="input mb-3">
                            <label for="author">Author</label>
                            <input  class="form-control" type="text" name="author" placeholder="" id="author">
                        </div>
                        <div class="input mb-3">
                            <label for="subject">Subject</label>
                            <input  class="form-control" type="text" name="subject" placeholder="genre or subject" id="subject">
                        </div>
                        <div class="input mb-3">
                            <label for="class">Class</label>
                            <input  class="form-control" type="text" name="class" placeholder="" id="class">
                        </div>
                        <div class="input mb-3">
                            <label for="image">Upload cover image</label>
                            <input  class="form-control" type="file" name="image" placeholder="name of the material" id="file">
                        </div>
                        <div class="input mb-3">
                            <label for="pdf">Upload the pdf</label>
                            <input  class="form-control" type="file" name="pdf" placeholder="name of the material" id="file">
                        </div>
                        <div class="input">
                            <button type="submit" class="reset">Submit</button>
                          
                            <button type="reset" class="reset">Reset</button>
                        </div>
                        </form>
                        </main>

